{
  "npmClient": "npm",
  "npmClientArgs": ["--no-package-lock", "--no-ci"],
  "version": "independent",
  "packages": [
    "packages/lf",
    "packages/lf-extension",
    "packages/lf-site",
    "examples"
  ],
  "command": {
    "version": {
      "conventionalCommits": true
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "ignoreChanges": ["**/*.md"],
  "bootstrap": {
    "hoist": true
  }
}
